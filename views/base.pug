    script.
       document.addEventListener('DOMContentLoaded', function () {
        var isLoggedIn = #{isLoggedIn};
        var loginAlert = '#{loginAlert}';

        if (isLoggedIn && loginAlert) {
          alert(loginAlert);
          hideButtons();
        }
      });

      // Function to hide login and signup buttons
      function hideButtons() {
        const buttons = document.getElementsByClassName('login-signup-button');
        for (let i = 0; i < buttons.length; i++) {
          buttons[i].style.display = 'none';
        }
      }    
      // Function to show custom alert
      function showCustomAlert(message) {
        const customAlert = document.getElementById('custom-alert');
        const alertContent = document.querySelector('#custom-alert .alert-content');
        alertContent.textContent = message;
        customAlert.style.display = 'flex';
      }

      // Function to hide custom alert
      function hideCustomAlert() {
        const customAlert = document.getElementById('custom-alert');
        customAlert.style.display = 'none';
        console.log('Script is running!');
      }

