    section#modal 
      //- Login Modal 
      div.modal.fade#loginModal(tabindex="-1", aria-labelledby="loginModalLabel", aria-hidden="true")
        div.modal-dialog
          div.modal-content.bg-dark-subtle
            div.modal-header
              h1.modal-title.fs-5#loginModalLabel Login to icoder
              button.btn-close(data-bs-dismiss="modal", aria-label="Close")
            div.modal-body
                form(action="/login" method="post")
                  .row.mb-3 
                    label.col-sm-2.col-form-label(for="inputEmail") Email
                    .col-sm-10
                      input.form-control(type="email", id="inputEmail" name="email")

                  .row.mb-3
                    label.col-sm-2.col-form-label(for="inputPassword") Password
                    .col-sm-10
                      input.form-control(type="password", id="inputPassword" name="password")


                  .row.mb-3
                    .col-sm-10.offset-sm-2
                      .form-check
                        input.form-check-input(type="checkbox", id="gridCheck")
                        label.form-check-label(for="gridCheck") Remember Me

                  button.btn.btn-dark(type="submit") Login

            div.modal-footer
              button.btn.btn-secondary(data-bs-dismiss="modal") Close
            
