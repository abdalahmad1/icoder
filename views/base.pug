                    input.form-control(type="password", id="inputPassword4" name="confirmpassword")


                .row.mb-3
                  .col-sm-10.offset-sm-2
                    .form-check
                      input.form-check-input(type="checkbox", id="gridCheck1")
                      label.form-check-label.dark(for="gridCheck1") Cheak me out

                button.btn.btn-dark(type="submit") Sign in

            div.modal-footer
              button.btn.btn-secondary(data-bs-dismiss="modal") Close
