                    input.form-control(type="text", id="name" name="name")

                .row.mb-3
                  label.col-sm-2.col-form-label(for="phone") Phone No
                  .col-sm-10
                    input.form-control(type="text", id="phone" name="phone")

                .row.mb-3
                  label.col-sm-2.col-form-label(for="email1" ) Email
                  .col-sm-10
                    input.form-control(type="email", id="emial1" name="email")

                .row.mb-3
                  label.col-sm-2.col-form-label(for="inputPassword3" ) Password
                  .col-sm-10
                   .password-container
                      input.form-control(type="password", id="inputPassword3", name="password")
                      i#show-password-icon.far.fa-eye(onclick="togglePasswordVisibility()")

                .row.mb-3
