extends base.pug
block scripts
  script
      include ../static/script.js
block style
  style
      include ../static/style.css
block content
    section#contact 

        dev.contact 
            h2 Contact US   
            dev.contact-box
                form(action="/contact" method="post")
                    dev.contatc-items 
                        label(for="name") Name : 
                        input(type="text" name="name" id="name" placeholder="Enter Your Name")    

                    dev.contatc-items
                        label(for="email") Email :  
                        input(type="email" name="email" id="email" placeholder="Enter Your Email") 

                    dev.contatc-items 
                        label(for="phone") Phone :  
                        input(type="text" name="phone" id="phone" placeholder="Enter Your Phone NO")    
                    dev.contatc-items 
                        label(for="address") Address :  
                        input(type="text" name="address" id="address" placeholder="Enter Your Address")    
                    dev.contatc-items 
                        label(for="message") Message  
                        textarea(name="message", type="text", cols="30", rows="10", id="message", placeholder="Enter your message")        
                    dev.contatc-items 
                        button#button Submit Now  
